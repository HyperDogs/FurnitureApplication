<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBody">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorHeader"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="@drawable/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/basic_info_lb"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="@string/date"
            android:textColor="@color/colorHeader"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/colorHeader"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/date_edt"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text=""
            android:focusable="false"
            android:editable="false"
            android:textColor="@color/colorHeader"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:text="@string/customer_no"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:text=":"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
        <EditText
            android:id="@+id/customer_no_edt"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:text="@string/item_no"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:text=":"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
        <EditText
            android:id="@+id/item_no_edt"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:text="@string/color_no"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:text=":"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
        <EditText
            android:id="@+id/color_no_edt"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:text="@string/co_no"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:text=":"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
        <EditText
            android:id="@+id/co_no_edt"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:text="@string/inspector"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:text=":"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
        <EditText
            android:id="@+id/inspector_edt"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorHeader"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:gravity="right"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/update_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/update"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_green"/>
    </LinearLayout>
</LinearLayout>